<% layout("/layouts/boilerplate.ejs")%>
    <div class="row">
        <h1 class="col-6 offset-2">SignUp in wonderlust</h1>

        <div class="col-8 offset-2 mt-2">

            <form method="post" action="/signup" novalidate class="needs-validation">

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Enter Your Name" id="username" class="form-control" type="text"
                        required>
                    <div class="valid-feedback">name l0oks good</div>

                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email-Id</label>
                    <input name="email" placeholder="Enter Your Email" id="email" class="form-control" type="email"
                        required>
                </div>

                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="Enter Your password" id="password" class="form-control" type="password"
                        required>
                </div>
              
                <button class="btn btn-success">SignUp</button>

            </form>




        </div>
    </div>